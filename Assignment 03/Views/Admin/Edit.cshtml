
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="../../Content/Site.css" rel="stylesheet">
    <title>Edit Product</title>
</head>
<body class="flex flex-col w-screen h-screen bg-[#f0f2f5]">
    <div class="py-4 bg-[#ffffff] text-white w-full flex items-center justify-center h-24 space-x-5">
        <a class="py-3 px-4 bg-[#00b843] rounded-lg shadow-xl" href="/Admin/Manage">Manage</a>
        <a class="py-3 px-4 bg-[#007aeb] rounded-lg shadow-xl" href="@Url.Action("Checkout", "User")">Checkout</a>
    </div>
    <div class="mt-10 ml-24">
        <form class="w-[30%]" method="post" action="/Admin/Edit">
            <div class="h-full w-full divide-y">
                <div class="flex w-full bg-[#ffffff] items-center">
                    <div class="pl-3 w-[30%]">
                        <label class="font-semibold">ID: </label>
                    </div>
                    <div class="w-[70%]">
                        <input class="pl-3 h-16 w-full" value="@Model.id" name="id" readonly />
                    </div>
                </div>
                <div class="flex w-full bg-[#ffffff] items-center">
                    <div class="pl-3 w-[30%]">
                        <label class="font-semibold">NAME: </label>
                    </div>
                    <div class="w-[70%]">
                        <input class="pl-3 h-16 w-full" value="@Model.name" name="name" />
                        <span class="text-sm text-red-500">
                            @Html.ValidationMessage("name")
                        </span>
                    </div>
                </div>
                <div class="flex w-full bg-[#ffffff] items-center">
                    <div class="pl-3 w-[30%]">
                        <label class="font-semibold">PRICE: </label>
                    </div>
                    <div class="w-[70%]">
                        <input class="pl-3 h-16 w-full" value="@Model.price" name="price" />
                        <span class="text-sm text-red-500">
                            @Html.ValidationMessage("price")
                        </span>
                    </div>
                </div>
            </div>
            <div class="mt-10">
                <button class="w-full text-white py-3 px-4 bg-[#007aeb] rounded-lg shadow-xl">Edit</button>
            </div>
        </form>
    </div>
</body>
</html>
