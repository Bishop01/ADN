{
  "devDependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.2.1"
  },
  "scripts": {
    "watch": "postcss ./content/tailwind.css -o ./content/site.css --watch",
    "watch2": "npx tailwindcss -i ./content/tailwind.css -o ./content/site.css --change",
    "change" : "onchange ./Views/**/*.cshtml -- npm run watch2"
  }
}
