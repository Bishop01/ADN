
@{
    Layout = "~/Views/Shared/Navbar.cshtml";
}
<head>
</head>
<div class="h-[100%] flex flex-col items-center">
    <div class="h-[75px] font-semibold text-2xl">
        <h2 class="h-full flex items-center justify-center">Restaurants</h2>
    </div>
    <div class="flex w-[80%] rounded-lg shadow-lg">
        <table class="w-full table-auto border-collapse">
            <thead>
                <tr class="text-left">
                    <th class="border p-3">ID</th>
                    <th class="border p-3">Name</th>
                    <th class="border p-3">Location</th>
                    <th class="border p-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                    <tr>
                        <td class="border p-3">@restaurant.id</td>
                        <td class="border p-3">@restaurant.name</td>
                        <td class="border p-3">@restaurant.location</td>
                        <td class="border p-3"><a class="border inline-block px-4 py-2 hover:bg-sky-400 hover:text-white hover:transition rounded-lg" href="@Url.Action("Dashboard", "Restaurant", new { id = restaurant.id })">Dashboard</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>